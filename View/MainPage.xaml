    <StackLayout Margin="40,0" VerticalOptions="CenterAndExpand">
        <Entry x:Name="PhoneEntry"
               HorizontalTextAlignment="Center"
               Placeholder="0112223333"
               HorizontalOptions="FillAndExpand"
               TextChanged="OnPhoneEntryTextChanged" />
        <Label x:Name="PhoneErrorLabel"
               Text="Invalid Phone Number"
               TextColor="Red"
               IsVisible="False" />

        <Entry x:Name="PasswordEntry"
               HorizontalTextAlignment="Center"
               IsPassword="True"
               Placeholder="Password"
               HorizontalOptions="FillAndExpand"
               TextChanged="OnPasswordEntryTextChanged" />
        <Label x:Name="PasswordErrorLabel"
               Text="Password length should be greater than 5"
               TextColor="Red"
               IsVisible="False" />

        <StackLayout Orientation="Horizontal"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="Center"
                     Margin="0,15">
            <CheckBox x:Name="TermsAndConditionsCheckbox"
                      HorizontalOptions="Start"
                      CheckedChanged="OnTermsCheckboxCheckedChanged" />
            <Label x:Name="TermsAndConditionsLabel"
                   Text="I have read the terms and conditions"
                   TextColor="Black"
                   FontSize="Small"
                   HorizontalOptions="Start"
                   Margin="5">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTermsLabelTapped" />
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>

        <Button x:Name="RegisterButton"
                Text="Register"
                FontSize="Medium"
                CornerRadius="20"
                VerticalOptions="EndAndExpand"
                HorizontalOptions="FillAndExpand"
                IsEnabled="False" />
    </StackLayout>

    
